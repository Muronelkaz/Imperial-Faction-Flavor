<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="ApparelMakeableBase" Name="IFF_DusterBluecoat">
    <defName>IFF_Apparel_Bluecoat</defName>
    <description>Resembling a duster, this coat design has been used for several centuries in one form or another.</description>
    <label>Bluecoat</label>
    <possessionCount>1</possessionCount>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <displayPriority>215</displayPriority>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Corsair/AM_CorsairDuster/AM_CorsairDuster</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <costStuffCount>90</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>400</MaxHitPoints>
      <WorkToMake>12000</WorkToMake>
      <Mass>1.75</Mass>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.65</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.85</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>4</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.5</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Corsair/AM_CorsairDuster/AM_CorsairDuster</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>IFF_Bluecoat</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>20</weight>
          <only>(0.157,0.365,0.561)</only>
        </li>
      </options>
    </colorGenerator>
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>


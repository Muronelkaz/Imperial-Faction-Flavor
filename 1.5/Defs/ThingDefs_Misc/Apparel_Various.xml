<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="Apparel_Duster" Name="Redcoat">
    <defName>IFF_Apparel_Redcoat</defName>
    <description>Resembling a duster, this coat design has been used for several centuries in one form or another.</description>
    <label>Redcoat</label>
    <possessionCount>1</possessionCount>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <displayPriority>215</displayPriority>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Duster/Duster</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <costStuffCount>90</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>400</MaxHitPoints>
      <WorkToMake>12000</WorkToMake>
      <Mass>1.75</Mass>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.65</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.85</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>4</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.5</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Duster/Duster</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
        <li>IFF_Redcoat</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.45,0,0)</only>
        </li>
        <li>
          <weight>20</weight>
          <only>(0.5,0.3,0.15)</only>
        </li>
        <li>
          <weight>10</weight>
          <min>(0.05,0,0)</min>
          <max>(0.65,0,0)</max>
        </li>
        <li>
          <weight>50</weight>
          <only>(0.75,0,0)</only>
        </li>
        <li>
          <weight>85</weight>
          <min>(0.65,0.05,0.05)</min>
          <max>(1,0,0)</max>
        </li>
      </options>
    </colorGenerator>
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>

  <ThingDef ParentName="Apparel_CollarShirt" Name="Waistcoat">
    <defName>IFF_Apparel_Waistcoat</defName>
    <description>A nice-looking waistcoat.</description>
    <label>Waistcoat</label>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/ShirtButton/ShirtButton</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>35</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>130</MaxHitPoints>
      <WorkToMake>2750</WorkToMake>
      <Mass>0.2</Mass>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.30</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.30</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/ShirtButton/ShirtButton</wornGraphicPath>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
        <li>IFF_Redcoat</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>80</weight>
          <min>(0.35,0.35,0.35)</min>
          <max>(0.75,0.75,0.75)</max>
        </li>
        <li>
          <weight>15</weight>
          <only>(0.5,0.5,0.5)</only>
        </li>
      </options>
    </colorGenerator>
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>

  <ThingDef ParentName="CowboyHat" Name="TricornHat">
    <defName>IFF_Apparel_TricornHat</defName>
    <label>Tricorn hat</label>
    <description>Stylish yet rugged, this hat keeps the sun and rain off - and it gives anyone who wears it a bit of extra charm. It is the second most important part of traditional Redcoat attire.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/CowboyHat/CowboyHat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake>2000</WorkToMake>
      <Mass>0.14</Mass>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.65</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.85</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>0.8</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.10</SocialImpact>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.5</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <developmentalStageFilter>Child, Adult</developmentalStageFilter>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/CowboyHat/CowboyHat</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
        <li>IFF_Redcoat</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
  </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <min>(0,0,0)</min>
          <max>(0.25,0.05,0.05)</max>
          <!--<only>(0.25,0.05,0.05,1)</only>-->
        </li>
        <li>
          <weight>85</weight>
          <min>(0,0,0)</min>
          <max>(0.05,0.05,0.05)</max>
          <!--<only>(0.05,0.25,0.05,1)</only>-->
        </li>
        <li>
          <weight>50</weight>
          <min>(0,0,0)</min>
          <max>(0.2,0.2,0.2)</max>
          <!--<only>(0.05,0.05,0.25,1)</only>-->
        </li>
      </options>
    </colorGenerator>
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>
  
</Defs>
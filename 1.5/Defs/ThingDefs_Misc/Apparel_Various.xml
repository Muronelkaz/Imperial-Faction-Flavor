<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="ApparelMakeableBase">
    <defName>IFF_Apparel_Duster</defName>
    <description>Resembling a duster, this coat design has been used for several centuries in one form or another.</description>
    <label>Redcoat</label>
    <possessionCount>1</possessionCount>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <displayPriority>215</displayPriority>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/Corsair/AM_CorsairJacket/AM_CorsairJacket</texPath>
      <!--<texPath>Things/Pawn/Humanlike/Apparel/Duster/Duster</texPath>-->
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <costStuffCount>90</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <thingCategories>
      <li>ApparelMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>400</MaxHitPoints>
      <WorkToMake>12000</WorkToMake>
      <Mass>1.75</Mass>
      <StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.65</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.85</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>4</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.05</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/Corsair/AM_CorsairJacket/AM_CorsairJacket</wornGraphicPath>
      <!--<wornGraphicPath>Things/Pawn/Humanlike/Apparel/Duster/Duster</wornGraphicPath>-->
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>IndustrialAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0,0)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0,0)</only>
        </li>
        <li>
          <weight>30</weight>
          <only>(0.4,0.3,0.15)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0,0)</min>
          <max>(0.5,0,0)</max>
        </li>
        <li>
          <weight>2</weight>
          <min>(0.5,0,0)</min>
          <max>(1,0,0)</max>
        </li>
      </options>
    </colorGenerator>
    <tradeTags>
      <li>BasicClothing</li>
    </tradeTags>
  </ThingDef>
  
</Defs>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
    <biocodeWeaponChance>0.2</biocodeWeaponChance>
    <initialWillRange>2~3</initialWillRange>
    <initialResistanceRange>7~12</initialResistanceRange>
  </PawnKindDef>


<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Ludeon.RimWorld.Royalty</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="Gun_Revolver"]/weaponTags</xpath>
          <value>
            <li>IFF_Redcoat</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="Gun_BoltActionRifle"]/weaponTags</xpath>
          <value>
            <li>IFF_Redcoat</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="Gun_ChargeLance"]/weaponTags</xpath>
          <value>
            <li>IFF_Redcoat</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="Gun_ChargeRifle"]/weaponTags</xpath>
          <value>
            <li>IFF_Redcoat</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>